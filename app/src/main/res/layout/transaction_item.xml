<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/transactionCard"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/billAmountTxt"
            android:layout_gravity="right|bottom"
            android:text="Bill Amt."
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/billStatusTxt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/billStatusTxt"
                android:layout_gravity="right|top"
                android:layout_margin="10dp"
                android:text="Bill Status"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/brandNameTxt"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:text="Brand Name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pointsEarnedTxt"
                android:text="Points Earned"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left|bottom"
                android:layout_margin="10dp"
                android:layout_below="@+id/brandNameTxt"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>