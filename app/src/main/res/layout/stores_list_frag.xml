<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AutoCompleteTextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="eg.Malad East"
        android:id="@+id/locationSearchTxt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/locationSearchBtn"
        android:layout_toRightOf="@+id/locationSearchTxt"
        android:layout_alignParentRight="true"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/storesRecyclerView"
        android:layout_below="@+id/locationSearchTxt">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>