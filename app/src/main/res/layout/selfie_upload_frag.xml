<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="12dp">


    <ImageView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:id="@+id/selfieImage"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Status Update"
        android:id="@+id/statusUpdate"
        android:layout_below="@+id/selfieImage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pickImageBtn"
        android:layout_below="@+id/statusUpdate"
        android:text="Pick Image"
        android:layout_centerHorizontal="true">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selfieUploadBtn"
        android:layout_below="@+id/statusUpdate"
        android:text="Upload Bill"
        android:layout_centerHorizontal="true"
        android:visibility="invisible">
    </Button>


</RelativeLayout>